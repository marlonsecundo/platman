<Window x:Class="Tilemap_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tilemap_Converter"
        mc:Ignorable="d"
        Title="Level Converter" Height="350" Width="525">
    <Grid Background="DarkGray">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="30" Margin="10">TILEMAP CONVERTER</TextBlock>

            <Button Name="BtLevel" Click="BtConverter_Click" Grid.Row="1" Height="40" Width="140" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20">CONVERTER LEVEL</Button>
            <Button Name="BtScreen" Click="BtScreen_Click" Grid.Row="1" Height="40" Width="140" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">CONVERTER SCREEN</Button>



        </Grid>
        
    </Grid>
</Window>
